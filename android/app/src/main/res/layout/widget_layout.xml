<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp"
    style="@android:style/Theme.DeviceDefault.Light">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAILY GITA WISDOM"
        android:textColor="@color/widget_text_secondary"
        android:textSize="10sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:gravity="center_horizontal|top" />

    <TextView
        android:id="@+id/widget_shloka_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="dharma-kṣhetre kuru-kṣhetre\nsama-vetā yuyutsavaḥ\nmāmakāḥ pāṇḍavāśh chaiva\nkim akurvata sañjaya"
        android:textColor="@color/widget_text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- iOS Widget does not show translation, matches requested alignment -->
    <TextView
        android:id="@+id/widget_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chapter 1, Shloka 1"
        android:textColor="@color/widget_text_secondary"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|bottom" />

</LinearLayout>
